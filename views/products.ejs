<%- include('partials/links-cdn-css-head') %>
  <title>Productos</title>
  </head>

  <body>
    <main class="container mt-5 pt-5 pb-5">
      <div class="text-center mb-5">
        <h1>Productos</h1>
      </div>
      <table class="table table-dark table-striped">
        <thead>
          <tr>
            <th scope="col">nombre</th>
            <th scope="col">precio</th>
            <th scope="col">imagen</th>
          </tr>
        </thead>
        <tbody>
          <% if (isEmpty) { %>
            <tr>
              <td>No hay Productos registrados a√∫n</td>
            </tr>
            <% } %>
              <% products.forEach((product)=> { %>
                <%- include('partials/row-product', {product: product}); %>
                  <% }) %>
        </tbody>
      </table>

      <div class=" mt-4 text-center  row justify-content-md-center">
        <div class="col-1r">
          <a class="btn btn-outline-dark me-4" href="<%= detailUrlBase %>">Agregar un nuevo producto</a>
        </div>
      </div>
    </main>
    <%- include('partials/links-cdn-js-footer') %>